{
  "name": "my-erp",
  "version": "1.0.0",
  "description": "ERP modulaire open-source inspirÃ© d'Odoo",
  "type": "module",
  "main": "server.ts",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch server.ts",
    "build": "tsc -b",
    "client:build": "pnpm --filter my-erp-client build",
    "client:dev": "pnpm --filter my-erp-client dev",
    "db:create": "createdb my_erp",
    "db:drop": "dropdb my_erp",
    "db:reset": "pnpm run db:drop && pnpm run db:create && pnpm start",
    "lint": "eslint .",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "erp",
    "odoo",
    "modular",
    "business",
    "sales",
    "project",
    "timesheet"
  ],
  "author": "",
  "license": "LGPL-3.0",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^2.0.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^4.17.21",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "eslint": "^9.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "zod": "^4.3.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
